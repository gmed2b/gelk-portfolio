---
import { Image } from '@astrojs/image/components'
import { IoArrowForward } from 'react-icons/io5'

type Props = {
  url: string
  title: string
  subtitle: string
  description: string
  heroImage: string
}

const { url, title, subtitle, description, heroImage } = Astro.props
---

<li class="mb-4">
  <a href={url} class="flex gap-3 w-full">
    <Image
      class="border border-slate-300 dark:border-zinc-700 rounded-xl"
      src={heroImage || '/placeholder-hero.jpg'}
      alt="Project Thumbnail"
      format={'webp'}
      width={300}
      height={200}
      aspectRatio={2.0}
    />
    <div class="w-full">
      <h3 class="text-2xl font-bold truncate w-5/6">{title}</h3>
      <h5 class="mb-1 font-light text text-slate-500 dark:text-slate-300">{subtitle}</h5>
      <p class="mb-2 opacity-70 overflow-hidden lineclamp-4 w-10/12 text-justify">
        {description}
      </p>
      <button class="border-2 border-sky-600 rounded-md py-1 px-2 text-sm text-sky-600">
        View project
      </button>
    </div>
  </a>
</li>
