---
import HeaderLink from './HeaderLink.astro'
import { IoLogoGithub } from 'react-icons/io5'
import ThemeToggleButton from './ThemeToggleButton'
---

<header class="fixed w-full p-2 z-20 backdrop-blur">
  <div class="mx-auto max-w-3xl">
    <nav class="flex items-center gap-3 text-base">
      <a href="/">
        <h2 class="font-semibold tracking-tighter p-2 font-rubik text-lg">
          <!-- <FootprintIcon /> -->
          Portfolio
        </h2>
      </a>
      <div class="items-center gap-6 hidden sm:flex">
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="https://github.com/withastro/astro" target="_blank">
          <IoLogoGithub /> Source
        </HeaderLink>
      </div>
      <div class="flex-1"></div>
      <ThemeToggleButton client:load />
    </nav>
  </div>
</header>
